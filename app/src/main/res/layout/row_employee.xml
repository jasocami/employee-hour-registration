<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"

    >

    <TextView
        android:id="@+id/name"
        style="@style/TextAppearance.Body1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginEnd="8dp"
        android:paddingStart="@dimen/row_padding_horizontal"
        android:paddingEnd="0dp"
        android:paddingTop="@dimen/row_padding_horizontal"
        android:paddingBottom="@dimen/row_padding_horizontal"
        />

    <TextView
        android:id="@+id/isActive"
        style="@style/TextAppearance.Body1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="OUT"
        android:textColor="@android:color/white"
        android:background="@color/deactivate"
        android:paddingStart="@dimen/row_padding_horizontal"
        android:paddingEnd="@dimen/row_padding_horizontal"
        android:paddingTop="@dimen/row_padding_vertical"
        android:paddingBottom="@dimen/row_padding_vertical"
        />

</LinearLayout>